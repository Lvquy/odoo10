    <!-- Phiếu chay trưa-->
    <template id="trua_chay">
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <div class="row mt32 mb32">
                    <div t-foreach="o.chay_trua" t-as="k">
                        <div class="col-xs-3 text-center">
                            <div style="border:double">
                            <p>CTY LÂM ĐẠT HƯNG <br/>
                            PHIẾU ĂN TRƯA: CHAY<br/>
                            Ngày: <span t-field="o.ngay_bao"/>
                            </p>
                        </div>
                        </div>
                    </div>
                </div>
                <strong>Trưa ngày: <span t-field="o.ngay_bao"/>, Tổng: <span t-field="o.chay_trua"/> suất chay</strong>
            </div>
        </t>
    </template>
    <template id="report_trua_chay">
        <t t-foreach="docs" t-as="o">
            <t t-call="Nhan_su_lds.trua_chay"/>
        </t>
    </template>
