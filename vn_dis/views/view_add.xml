            </field>
        </record>
        <!-- action view -->
        <record model="ir.actions.act_window" id="action_view_x">
            <field name="name">xa</field>
            <field name="res_model">xa</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Tạo mới đối tượng
                </p>
            </field>
        </record>
        <menuitem id="menu_root" name="Dữ liệu địa chỉ"  sequence="3" groups="base.group_system"/>
        <menuitem id="menu_root_t" name="Tỉnh" action="action_view_t" parent="menu_root" sequence="3" groups="base.group_system"/>
        <menuitem id="menu_root_h" name="Huyện" action="action_view_h" parent="menu_root" sequence="4" groups="base.group_system"/>
        <menuitem id="menu_root_x" name="Xã" action="action_view_x" parent="menu_root"  sequence="5" groups="base.group_system"/>
    </data>
</odoo>